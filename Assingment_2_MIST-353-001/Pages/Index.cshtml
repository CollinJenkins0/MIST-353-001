 <!-- Search Bar -->
<form id="locationForm" action="/searchResults" class="search-form">

    <div class="input-group">
        <span class="input-group-text"><i class="fa-solid fa-location-arrow"></i></span>
        <input type="text" id="locInp" name="location" class="form-control" placeholder="Where are you going?" aria-label="Location">
    </div>

    <div class="date-input-group">
        <label for="startDateInp" class="form-label">Start Date</label>
        <input type="date" id="startDateInp" name="checkIn" class="form-control">
        
        <label for="endDateInp" class="form-label">End Date</label>
        <input type="date" id="endDateInp" name="checkOut" class="form-control">
    </div>

    <div class="select-group">
        <label for="trvDrop" class="form-label">Travelers?</label>
        <select name="trvDrop" id="trvDrop" class="form-select">
            <option value="1">1 traveler</option>
            <option value="2">2 travelers</option>
            <option value="3">3 travelers</option>
            <option value="3">4 travelers</option>
            <option value="3">5 travelers</option>

        </select>
    </div>

    <input type="hidden" id="latTxt" step="any" name="latitude">
    <input type="hidden" id="longTxt" step="any" name="longitude">

    <button type="submit" id="submitBtn" class="btn btn-primary">Search</button>

</form>

<button id="locBtn" class="location-button" onclick="getLocation()">
